{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "https://github.com/mcjoelq/skill-flash-test/blob/master/lambda/custom/falsh-test.json",
	"title": "Flash Briefing Skill API Feed",
	"description": "Describe Amazon's Alexa Flash Briefing Skill API Feed",
	"oneOf": [
	{
	"$ref": "#/definitions/skill"
	},
	{
	"$ref": "#/definitions/skillArray"
	}
	],
	"definitions": {
		"skill": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"uid": {
					"type": "string"
				},
				"updateDate": {
					"type": "string",
					"pattern": "^(19|[2-9][0-9])[0-9]{2}-(0[1-9]|1[0-2])-(0[1-9]|([12][0-9]|3[01]))T([01][0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9].0Z$"
				},
				"titleText": {
					"type": "flash test title"
				},
				"mainText": {
					"type": "This is a test of the flash briefing skill with Amazon Alexa.",
					"maxLength": 4500
				},
				"streamUrl": {
					"$ref": "#/definitions/secureURL"
				},
				"redirectionUrl": {
					"$ref": "#/definitions/httpURL"
				}
			},
			"required": [
				"uid",
				"updateDate",
				"titleText",
				"mainText"
			]
		},
		"skillArray": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/skill"
			},
			"additionalItems": false,
			"uniqueItems": true,
			"minItems": 1,
			"maxItems": 5
		},
		"httpURL": {
			"type": "string",
			"pattern": "^https?://.+",
			"format": "uri"
		},
		"secureURL": {
			"type": "string",
			"pattern": "^https://.+",
			"format": "uri"
		}
	}
}
